<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/edit_product_id"
            android:layout_marginTop="16dp"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:hint="Digite o id"/>

        <Button
            android:id="@+id/btn_search_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pesquisar"/>

    </LinearLayout>



    <TextView
        android:text="Nome do produto"
        android:layout_marginTop="16dp"
        android:id="@+id/text_product_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="16dp"
        android:text="PreÃ§o do produto"
        android:id="@+id/text_product_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:layout_marginTop="16dp"
        android:id="@+id/edit_quantity_products"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Digite a quantidade vendida"/>

    <Button
        android:layout_marginTop="16dp"
        android:id="@+id/btn_add_product"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Adicionar"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@id/recyclerview"
        android:layout_marginTop="16dp"
        tools:listitem="@layout/res_product_added"
        android:layout_width="match_parent"
        android:layout_height="230dp"/>

    <EditText
        android:layout_marginTop="16dp"
        android:id="@+id/edit_discount"
        android:layout_width="match_parent"
        android:hint="Desconto"
        android:layout_height="wrap_content"/>

    <EditText
        android:layout_marginTop="16dp"
        android:id="@+id/edit_payment_method"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Forma de pagamento"/>

    <TextView
        android:layout_marginTop="16dp"
        android:id="@+id/text_total"
        android:text="0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:layout_marginTop="16dp"
        android:id="@+id/btn_end_sale"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Finalizar"/>

</androidx.appcompat.widget.LinearLayoutCompat>